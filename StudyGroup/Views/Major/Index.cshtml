@model IEnumerable<StudyGroup.Models.Major>

@{
    ViewBag.Title = "Index";
}

<h2><font color="#b7a57a">Index</font></h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>

<table class="table">
    <tr>
        <th>
            <font color="white">@Html.DisplayNameFor(model => model.MajorID)</font>
</th>
        <th>
            <font color="white">@Html.DisplayNameFor(model => model.MajorName)</font>
</th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                <font color="white"> @Html.DisplayFor(modelItem => item.MajorID)</font>
</td>
            <td>
                <@Html.DisplayFor(modelItem => item.MajorName)
</td>
            <td>
             @Html.ActionLink("Edit", "Edit", new { id = item.MajorID }) |
             @Html.ActionLink("Details", "Details", new { id = item.MajorID }) |
