@model IEnumerable<StudyGroup.Models.Room>

@{
    ViewBag.Title = "Index";
}

<h2><font color="#b7a57a">Index</font></h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            <font color="white">@Html.DisplayNameFor(model => model.RoomName)</font>
</th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            <font color="white">@Html.DisplayFor(modelItem => item.RoomName)</font>
</td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.RoomID }) |
            @Html.ActionLink("Details", "Details", new { id=item.RoomID }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.RoomID })
        </td>
    </tr>
}

</table>
